bindsym $mod+shift+x exec lock


# start rofi (a program launchern)
exec_always compton
bindsym $mod+d exec rofi -show run -theme onedark -font "System San Francisco Display 12"


# Audio

bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%; exec pactl set-sink-mute @DEFAULT_SINK@ 0
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%; exec pactl set-sink-mute @DEFAULT_SINK@ 0
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# Media Player

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Screen Brightness 

bindsym XF86MonBrightnessUp exec /bin/bash /home/ahmedselimuzum/brightness_up
bindsym XF86MonBrightnessDown exec exec /bin/bash /home/ahmedselimuzum/brightness_down

# Disable arrow keys 
bindcode 237 "exec xmodmap -e 'keycode 111='; exec xmodmap -e 'keycode 113=';exec xmodmap -e 'keycode 114=';exec xmodmap -e 'keycode 116=' "
bindcode 238 "exec xmodmap -e 'keycode 111=Up'; exec xmodmap -e 'keycode 113=Left';exec xmodmap -e 'keycode 114=Right';exec xmodmap -e 'keycode 116=Down' "

# Screenshot

bindsym $mod+shift+s exec gnome-screenshot

